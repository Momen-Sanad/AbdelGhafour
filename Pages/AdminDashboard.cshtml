@page "{editId?}"
@model SuperMarket.Pages.AdminDashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="css/styles.css" rel="stylesheet">
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Admin Dashboard</h1>

    <!-- Success/Error Alerts -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!ModelState.IsValid)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <div asp-validation-summary="All"></div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Staff List Table -->
    <div class="table-responsive mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="text-center">Admin Dashboard</h1>
            <form method="post" asp-page="/Account/Logout">
                <button type="submit" class="btn btn-danger">Logout</button>
            </form>
        </div>
        <table class="table table-hover table-bordered">
            <thead class="bg-primary text-white">
                <tr>
                    <th>Staff ID</th>
                    <th>Staff Name</th>
                    <th>Staff Role</th>
                    <th>Staff Phone</th>
                    <th>Admin ID</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var staff in Model.Staff)
                {
                    <tr>
                        <td>@staff.StaffID</td>
                        <td>@staff.StaffName</td>
                        <td>@staff.StaffRole</td>
                        <td>@staff.StaffPhone</td>
                        <td>@staff.AdminID</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-page="./AdminDashboard"
                                   asp-route-editId="@staff.StaffID"
                                   class="btn btn-outline-warning btn-sm">Edit</a>
                                <form method="post"
                                      asp-page-handler="Delete"
                                      asp-route-StaffID="@staff.StaffID"
                                      style="display:inline;">
                                    <button type="submit"
                                            class="btn btn-outline-danger btn-sm"
                                            onclick="return confirm('Are you sure you want to delete this staff member?');">
                                        Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Add/Edit Staff Form -->
    <div class="card mt-4">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0 text-center">@(Model.IsEditing ? "Edit Staff" : "Add New Staff")</h2>
        </div>
        <div class="card-body">
            <form method="post" asp-page-handler="@(Model.IsEditing ? "Edit" : "Add")">
                @if (Model.IsEditing)
                {
                    <input type="hidden" asp-for="NewStaff.StaffID" />
                    <div class="mb-3">
                        <label asp-for="NewStaff.StaffID" class="form-label">Staff ID:</label>
                        <input asp-for="NewStaff.StaffID" class="form-control" readonly />
                        <div class="text-danger">
                            <span asp-validation-for="NewStaff.StaffID"></span>
                        </div>
                    </div>
                }
                else
                {
                    <div class="mb-3">
                        <label asp-for="NewStaff.StaffID" class="form-label">Staff ID:</label>
                        <input asp-for="NewStaff.StaffID" class="form-control" />
                        <div class="text-danger">
                            <span asp-validation-for="NewStaff.StaffID"></span>
                        </div>
                    </div>
                }

                <div class="mb-3">
                    <label asp-for="NewStaff.StaffName" class="form-label">Name:</label>
                    <input asp-for="NewStaff.StaffName" class="form-control" />
                    <div class="text-danger">
                        <span asp-validation-for="NewStaff.StaffName"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="NewStaff.StaffRole" class="form-label">Role:</label>
                    <input asp-for="NewStaff.StaffRole" class="form-control" />
                    <div class="text-danger">
                        <span asp-validation-for="NewStaff.StaffRole"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="NewStaff.StaffPhone" class="form-label">Phone:</label>
                    <input asp-for="NewStaff.StaffPhone" class="form-control" />
                    <div class="text-danger">
                        <span asp-validation-for="NewStaff.StaffPhone"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="NewStaff.AdminID" class="form-label">Admin ID:</label>
                    <input asp-for="NewStaff.AdminID" class="form-control" />
                    <div class="text-danger">
                        <span asp-validation-for="NewStaff.AdminID"></span>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100">
                    @(Model.IsEditing ? "Update" : "Add") Staff
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
