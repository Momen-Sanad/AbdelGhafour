@page "{editId?}"
@model SuperMarket.Pages.AdminDashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1>Admin Dashboard</h1>

<!-- Display validation summary -->
@Html.ValidationSummary(true)

<!-- Display staff members in a table -->
<table border="1" cellpadding="5" cellspacing="0">
    <thead>
        <tr>
            <th>Staff ID</th>
            <th>Staff Name</th>
            <th>Staff Role</th>
            <th>Staff Phone</th>
            <th>Admin ID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var staff in Model.Staff)
        {
            <tr>
                <td>@staff.StaffID</td>
                <td>@staff.StaffName</td>
                <td>@staff.StaffRole</td>
                <td>@staff.StaffPhone</td>
                <td>@staff.AdminID</td>
                <td>
                    <!-- Edit and Delete actions -->
                    <a asp-page="./AdminDashboard" asp-route-editId="@staff.StaffID">Edit</a> |
                    <form method="post" asp-page-handler="Delete" asp-route-staffID="@staff.StaffID" style="display:inline;">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Form to add/edit staff members -->
<h2>@(Model.IsEditing ? "Edit Staff" : "Add New Staff")</h2>

<form method="post">
    @if(Model.IsEditing)
    {
        <input type="hidden" asp-for="NewStaff.StaffID" />
        <input type="hidden" name="handler" value="Edit" />
    }
    else
    {
        <input type="hidden" name="handler" value="Add" />
    }

    <div>
        <label asp-for="NewStaff.StaffID">Staff ID:</label>
        <input asp-for="NewStaff.StaffID" />
        <span asp-validation-for="NewStaff.StaffID"></span>
    </div>
    <div>
        <label asp-for="NewStaff.StaffName">Name:</label>
        <input asp-for="NewStaff.StaffName" />
        <span asp-validation-for="NewStaff.StaffName"></span>
    </div>
    <div>
        <label asp-for="NewStaff.StaffRole">Role:</label>
        <input asp-for="NewStaff.StaffRole" />
        <span asp-validation-for="NewStaff.StaffRole"></span>
    </div>
    <div>
        <label asp-for="NewStaff.StaffPhone">Phone:</label>
        <input asp-for="NewStaff.StaffPhone" />
        <span asp-validation-for="NewStaff.StaffPhone"></span>
    </div>
    <div>
        <label asp-for="NewStaff.AdminID">Admin ID:</label>
        <input asp-for="NewStaff.AdminID" />
        <span asp-validation-for="NewStaff.AdminID"></span>
    </div>
    <button type="submit">@((Model.IsEditing ? "Update" : "Add") + " Staff")</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}