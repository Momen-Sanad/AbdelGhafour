@page
@model SuperMarket.Pages.Account.RegisterModel

@{
    Layout = "_Layout";
}

<div class="register-container">
    <h2 class="register-title">Register</h2>

    <form method="post" class="register-form">
        <div class="form-group">
            <label for="Input_FullName">Full Name</label>
            <input type="text" id="Input_FullName" name="Input.FullName" asp-for="Input.FullName" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="Input_Email">Email</label>
            <input type="email" id="Input_Email" name="Input.Email" asp-for="Input.Email" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="Input_Password">Password</label>
            <input type="password" id="Input_Password" name="Input.Password" asp-for="Input.Password" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="Input_ConfirmPassword">Confirm Password</label>
            <input type="password" id="Input_ConfirmPassword" name="Input.ConfirmPassword" asp-for="Input.ConfirmPassword" class="form-control" required />
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Register</button>
        </div>
    </form>

    <div class="register-footer">
        <p>Already have an account? <a href="/Account/Login">Login here</a></p>
    </div>
</div>

<!-- Optionally, add some custom styling -->
<style>

    .register-container {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .register-title {
        text-align: center;
        margin-bottom: 20px;
        font-size: 1.5rem;
        color: #333;
    }

    .register-form {
        display: flex;
        flex-direction: column;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        font-weight: bold;
        color: #333;
    }

    .form-control {
        padding: 10px;
        border-radius: 4px;
        border: 1px solid #ccc;
        font-size: 1rem;
        width: 100%;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        color: white;
        padding: 10px;
        font-size: 1rem;
        cursor: pointer;
        border-radius: 4px;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .register-footer {
        text-align: center;
        margin-top: 15px;
    }

    .register-footer a {
        color: #007bff;
        text-decoration: none;
    }

    .register-footer a:hover {
        text-decoration: underline;
    }
</style>
