@page
@model SuperMarket.Pages.Account.LoginModel

@{
    Layout = "_Layout";
}

<div class="login-container">
    <h2 class="login-title">Login</h2>

    <form method="post" class="login-form">
        <div class="form-group">
            <label for="Input_Email">Email</label>
            <input type="email" id="Input_Email" name="Input.Email" asp-for="Input.Email" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="Input_Password">Password</label>
            <input type="password" id="Input_Password" name="Input.Password" asp-for="Input.Password" class="form-control" required />
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label>
                    <input asp-for="Input.RememberMe" /> Remember me
                </label>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Login</button>
        </div>
    </form>

    <div class="login-footer">
        <p>Don't have an account? <a href="/Account/Register">Register</a></p>
    </div>
</div>

<style>

    .login-container {
        max-width: 400px;
        margin: 0 auto;
        align-content: center;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .login-title {
        text-align: center;
        margin-bottom: 20px;
        font-size: 1.5rem;
        color: #333;
    }

    .login-form {
        display: flex;
        flex-direction: column;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        font-weight: bold;
        color: #333;
    }

    .form-control {
        padding: 10px;
        border-radius: 4px;
        border: 1px solid #ccc;
        font-size: 1rem;
        width: 100%;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        color: white;
        padding: 10px;
        font-size: 1rem;
        cursor: pointer;
        border-radius: 4px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .login-footer {
        text-align: center;
        margin-top: 15px;
    }

        .login-footer a {
            color: #007bff;
            text-decoration: none;
        }

            .login-footer a:hover {
                text-decoration: underline;
            }
</style>
