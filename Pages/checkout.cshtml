@page
@model SuperMarket.Pages.CheckoutModel
@{ ViewData["Title"] = "Shopping Checkout - FreshMart";}
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="css/styles.css" rel="stylesheet">
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout - FreshMart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="css/styles.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">FreshMart</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a href="/" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item">
                        <a href="/products" class="nav-link">Products</a>
                    </li>
                    <li class="nav-item">
                        <a href="/about" class="nav-link">About</a>
                    </li>
                    <li class="nav-item">
                        <a href="/contact" class="nav-link">Contact</a>
                    </li>
                </ul>
                <a href="/checkout" class="btn btn-outline-primary position-relative">
                    Checkout
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Checkout Section -->
    <div class="container py-5">
        <h1 class="mb-4">Checkout</h1>

        <!-- Order Items -->
        <div class="row mb-5">
            <div class="col-lg-8">
                <h2 class="h4 mb-4">Your Items</h2>
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-2">
                                <img src="https://via.placeholder.com/150" alt="Product 1" class="img-fluid rounded">
                            </div>
                            <div class="col-md-4">
                                <h5>Organic Bananas</h5>
                                <p class="text-muted">$2.99/lb</p>
                            </div>
                            <div class="col-md-3">
                                <input type="number" class="form-control text-center" value="2" min="1">
                            </div>
                            <div class="col-md-2 text-end">
                                <p class="h5">$5.98</p>
                            </div>
                            <div class="col-md-1 text-end">
                                <button class="btn btn-link text-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-2">
                                <img src="https://via.placeholder.com/150" alt="Product 2" class="img-fluid rounded">
                            </div>
                            <div class="col-md-4">
                                <h5>Organic Milk</h5>
                                <p class="text-muted">$4.99/gallon</p>
                            </div>
                            <div class="col-md-3">
                                <input type="number" class="form-control text-center" value="1" min="1">
                            </div>
                            <div class="col-md-2 text-end">
                                <p class="h5">$4.99</p>
                            </div>
                            <div class="col-md-1 text-end">
                                <button class="btn btn-link text-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="col-lg-4">
                <h2 class="h4 mb-4">Order Summary</h2>
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3">
                            <span>Subtotal</span>
                            <span>$10.97</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Shipping</span>
                            <span>$5.00</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Tax</span>
                            <span>$1.32</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-4">
                            <strong>Total</strong>
                            <strong>$17.29</strong>
                        </div>
                        <button onclick="location.href='/payments'" class="btn btn-primary w-100">Proceed to Payment</button>
                    </div>
                </div>

                <!-- Promo Code Section -->
                <div class="card mt-4">
                    <div class="card-body">
                        <h5 class="card-title">Apply Promo Code</h5>
                        <form class="d-flex gap-2">
                            <input type="text" class="form-control" placeholder="Enter code">
                            <button type="submit" class="btn btn-outline-primary">Apply</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4">
        <div class="container">
            <p class="mb-0">&copy; 2024 FreshMart. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
