@page
@model SuperMarket.Pages.PaymentsModel
@{
    ViewData["Title"] = "Shopping Payments - FreshMart";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="css/styles.css" rel="stylesheet">
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment - FreshMart</title>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">FreshMart</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a href="/" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item">
                        <a href="/products" class="nav-link">Products</a>
                    </li>
                    <li class="nav-item">
                        <a href="/about" class="nav-link">About</a>
                    </li>
                    <li class="nav-item">
                        <a href="/contact" class="nav-link">Contact</a>
                    </li>
                </ul>
                <a href="/payments" class="btn btn-outline-primary position-relative">
                    Checkout
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Payment Section -->
    <div class="container py-5">
        <h1 class="mb-4">Payment</h1>

        <!-- Payment Form -->
        <div class="row">
            <div class="col-lg-8">
                <h2 class="h4 mb-4">Payment Details</h2>
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="PaymentDetails.CardName" class="form-label"></label>
                        <input asp-for="PaymentDetails.CardName" class="form-control" placeholder="Enter your full name" required>
                        <span asp-validation-for="PaymentDetails.CardName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="PaymentDetails.CardNumber" class="form-label"></label>
                        <input asp-for="PaymentDetails.CardNumber" class="form-control" placeholder="1234 5678 9012 3456" required>
                        <span asp-validation-for="PaymentDetails.CardNumber" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="PaymentDetails.ExpiryDate" class="form-label"></label>
                            <input asp-for="PaymentDetails.ExpiryDate" class="form-control" placeholder="MM/YY" required>
                            <span asp-validation-for="PaymentDetails.ExpiryDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="PaymentDetails.CVV" class="form-label"></label>
                            <input asp-for="PaymentDetails.CVV" class="form-control" placeholder="123" required>
                            <span asp-validation-for="PaymentDetails.CVV" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="PaymentDetails.BillingAddress" class="form-label"></label>
                        <input asp-for="PaymentDetails.BillingAddress" class="form-control" placeholder="123 Main St, City, Country" required>
                        <span asp-validation-for="PaymentDetails.BillingAddress" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Complete Payment</button>
                </form>
            </div>

            <!-- Order Summary -->
            <div class="col-lg-4">
                <h2 class="h4 mb-4">Order Summary</h2>
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3">
                            <span>Subtotal</span>
                            <span>@Model.Summary?.Subtotal.ToString("C")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Shipping</span>
                            <span>@Model.Summary?.Shipping.ToString("C")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Tax</span>
                            <span>@Model.Summary?.Tax.ToString("C")</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-4">
                            <strong>Total</strong>
                            <strong>@Model.Summary?.Total.ToString("C")</strong>
                        </div>
                        <p class="text-muted text-center">You will be charged upon completing payment.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4">
        <div class="container">
            <p class="mb-0">&copy; 2024 FreshMart. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
