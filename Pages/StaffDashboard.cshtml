@page "{editId?}"
@model SuperMarket.Pages.StaffDashboardModel

@{
    ViewData["Title"] = "Staff Dashboard";
    var pageHandler = Model.IsEditing ? "Edit" : "Add";
    var formTitle = Model.IsEditing ? "Edit Product" : "Add New Product";
    var submitButtonText = Model.IsEditing ? "Update Product" : "Add Product";
    var submitButtonIcon = Model.IsEditing ? "bi-save" : "bi-plus-lg";
}
@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="css/styles.css" rel="stylesheet">
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-4">@ViewData["Title"]</h1>
        <form method="post" asp-page="/Account/Logout">
            <button type="submit" class="btn btn-danger">Logout</button>
        </form>
    </div>
       
    <!-- Display Status Message -->
    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="alert alert-info">@Model.StatusMessage</div>
    }

    <!-- Display validation errors -->
    <div asp-validation-summary="All" class="alert alert-danger"></div>

    <!-- Product Form Card -->
    <div class="card mb-5">
        <div class="card-header">
            <h2 class="mb-0">
                <i class="bi @(Model.IsEditing ? "bi-pencil-square" : "bi-plus-square") me-2"></i>
                @formTitle
        </div>
        <div class="card-body">
            <form method="post" asp-page-handler="@pageHandler" class="row g-3 needs-validation" novalidate>

                @if (Model.IsEditing)
                {
                <!-- Product ID (bound to model and readonly) -->
                <div class="col-md-6">
                    <label asp-for="NewProduct.ProductID" class="form-label">Product ID</label>
                    <input asp-for="NewProduct.ProductID" class="form-control" readonly />
                    <span asp-validation-for="NewProduct.ProductID" class="text-danger"></span>
                </div>
                }
                else
                {
                    <!-- Product ID (for new product) -->
                    <div class="col-md-6">
                        <label for="ProductID" class="form-label">Product ID</label>
                        <input asp-for="NewProduct.ProductID" class="form-control" id="ProductID" placeholder="Enter Product ID" />
                        <span asp-validation-for="NewProduct.ProductID" class="text-danger"></span>
                    </div>
                }

                <!-- Product Name -->
                <div class="col-md-6">
                    <label for="ProductName" class="form-label">Product Name</label>
                    <input asp-for="NewProduct.ProductName" class="form-control" id="ProductName" placeholder="Enter Product Name" />
                    <span asp-validation-for="NewProduct.ProductName" class="text-danger"></span>
                </div>

                <!-- Price -->
                <div class="col-md-6">
                    <label for="Price" class="form-label">Price</label>
                    <input asp-for="NewProduct.Price" class="form-control" id="Price" placeholder="Enter Price" />
                    <span asp-validation-for="NewProduct.Price" class="text-danger"></span>
                </div>

                <!-- Category -->
                <div class="col-md-6">
                    <label for="Category" class="form-label">Category</label>
                    <input asp-for="NewProduct.Category" class="form-control" id="Category" placeholder="Enter Category" />
                    <span asp-validation-for="NewProduct.Category" class="text-danger"></span>
                </div>

                <!-- Inventory ID -->
                <div class="col-md-6">
                    <label for="InventoryID" class="form-label">Inventory ID</label>
                    <input asp-for="NewProduct.InventoryID" class="form-control" id="InventoryID" placeholder="Enter Inventory ID" />
                    <span asp-validation-for="NewProduct.InventoryID" class="text-danger"></span>
                </div>

                <!-- Image URL -->
                <div class="col-md-6">
                    <label for="Image" class="form-label">Image URL</label>
                    <input asp-for="NewProduct.image" class="form-control" id="Image" placeholder="Enter Image URL" />
                    <span asp-validation-for="NewProduct.image" class="text-danger"></span>
                </div>

                <!-- Form Actions -->
                <div class="col-12 d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi @submitButtonIcon me-1"></i>@submitButtonText
                    </button>

                    @if (Model.IsEditing)
                    {
                        <a asp-page="./StaffDashboard" class="btn btn-secondary ms-2">
                            <i class="bi bi-x-circle me-1"></i>Cancel
                        </a>
                    }
                </div>
            </form>
        </div>
    </div>

    <!-- Product List -->
    <h2 class="mt-5">Product List</h2>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Product ID</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Inventory ID</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Products != null && Model.Products.Any())
                {
                    @foreach (var product in Model.Products)
                    {
                        <tr>
                            <td>@product.ProductID</td>
                            <td>@product.ProductName</td>
                            <td>@product.Price.ToString("C")</td>
                            <td>@product.Category</td>
                            <td>@product.InventoryID</td>
                            <td>
                                <img src="@product.image" alt="Product Image" class="img-fluid" style="max-height: 50px;" />
                            </td>
                            <td>
                                <!-- Edit Button -->
                                <a asp-page="./StaffDashboard" asp-route-editId="@product.ProductID" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil-fill"></i> Edit
                                </a>
                                <!-- Delete Button with Modal Trigger -->
                                <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@product.ProductID">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </button>

                                <!-- Delete Confirmation Modal -->
                                <div class="modal fade" id="deleteModal-@product.ProductID" tabindex="-1" aria-labelledby="deleteModalLabel-@product.ProductID" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="deleteModalLabel-@product.ProductID">
                                                    Confirm Deletion
                                                </h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                Are you sure you want to delete the product <strong>@product.ProductName</strong>?
                                            </div>
                                            <div class="modal-footer">
                                                <form method="post" asp-page-handler="Delete">
                                                    <input type="hidden" name="productId" value="@product.ProductID" />
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                        Cancel
                                                    </button>
                                                    <button type="submit" class="btn btn-danger">
                                                        Delete
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- End of Modal -->
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center">No products available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
