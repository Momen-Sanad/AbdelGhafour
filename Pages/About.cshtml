@page
@model SuperMarket.Pages.AboutModel

@{
    ViewData["Title"] = "About Us - FreshMart";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="css/styles.css" rel="stylesheet">
}

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">FreshMart</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a asp-page="/Index" class="nav-link active">Home</a>
                </li>
                <li class="nav-item">
                    <a asp-page="/products" class="nav-link">Products</a>
                </li>
                <li class="nav-item">
                    <a asp-page="/About" class="nav-link">About</a>
                </li>
            </ul>
            <form method="post" asp-page="Account/Logout" class="d-inline">
                <button type="submit" class="btn btn-outline-danger me-3">Logout</button>
            </form>
            <a asp-page="/cart" class="btn btn-outline-primary active position-relative">
                Cart
            </a>
        </div>
    </div>
</nav>

<div class="container my-5">
    <!-- Page Header -->
    <h1 class="text-center text-primary mb-4">Welcome to FreshMart</h1>

    <!-- About Section -->
    <section class="row mb-5">
        <div class="col-md-6">
            <h2 class="display-4 text-success">Our Mission</h2>
            <p class="lead">
                At FreshMart, we are dedicated to providing the freshest produce, finest groceries, and exceptional customer service. Our goal is to bring you the best food options at affordable prices so you can lead a healthier, happier life.
            </p>
            <p>
                We work with local farmers and suppliers to offer a wide selection of high-quality products, supporting sustainable agriculture and your well-being.
            </p>
        </div>
    </section>

    <!-- Our Story Section -->
    <section class="row mb-5">
        <div class="col-md-6">
            <h2 class="display-4 text-danger">Our Story</h2>
            <p class="lead">
                FreshMart was founded in 2010 with the vision of making quality groceries accessible to everyone. Over the years, we’ve expanded our reach but have never lost sight of our mission: bringing fresh, healthy food to your table.
            </p>
            <p>
                From our humble beginnings to our growing network of stores, we remain committed to offering you the best products while supporting sustainability and local communities.
            </p>
        </div>
    </section>

    <!-- Call-to-Action Section -->
    <section class="text-center mt-5 py-4 bg-light rounded shadow-sm">
        <h3 class="text-primary">Join the FreshMart Family!</h3>
        <p class="lead">
            We’re more than just a supermarket – we’re a community of fresh food lovers. Visit us today and discover the best in fresh, organic, and locally sourced groceries. We can’t wait to serve you!
        </p>
    </section>
</div>
