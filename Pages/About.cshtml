@page
@model SuperMarket.Pages.AboutModel
@{
    ViewData["Title"] = "About Us - FreshMart";
}

@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="css/styles.css" rel="stylesheet">
}

<div class="container my-5">
    <h1 class="text-center text-primary mb-4">Welcome to FreshMart</h1>

    <!-- About Section -->
    <div class="row mb-5">
        <div class="col-md-6">
            <img src="https://via.placeholder.com/500" alt="FreshMart Store" class="img-fluid rounded shadow-lg mb-4">
        </div>
        <div class="col-md-6">
            <h2 class="display-4 text-success">Our Mission</h2>
            <p class="lead">At FreshMart, we are dedicated to providing the freshest produce, finest groceries, and exceptional customer service. Our goal is to bring you the best food options at affordable prices so you can lead a healthier, happier life.</p>
            <p>We work with local farmers and suppliers to offer a wide selection of high-quality products, supporting sustainable agriculture and your well-being.</p>
        </div>
    </div>

    <!-- Our Story Section -->
    <div class="row">
        <div class="col-md-6">
            <h2 class="display-4 text-danger">Our Story</h2>
            <p class="lead">FreshMart was founded in 2010 with the vision of making quality groceries accessible to everyone. Over the years, we’ve expanded our reach but have never lost sight of our mission: bringing fresh, healthy food to your table.</p>
            <p>From our humble beginnings to our growing network of stores, we remain committed to offering you the best products while supporting sustainability and local communities.</p>
        </div>
        <div class="col-md-6">
            <img src="https://via.placeholder.com/500" alt="FreshMart Produce" class="img-fluid rounded shadow-lg mb-4">
        </div>
    </div>

    <!-- Call-to-Action Section -->
    <div class="text-center mt-5 py-4 bg-light rounded shadow-sm">
        <h3 class="text-primary">Join the FreshMart Family!</h3>
        <p class="lead">We’re more than just a supermarket – we’re a community of fresh food lovers. Visit us today and discover the best in fresh, organic, and locally sourced groceries. We can’t wait to serve you!</p>
    </div>
</div>
